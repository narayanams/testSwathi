@using TRAILSWEB.Models
@model TRAILSWEB.Models.EmailRequest
@{
    ViewBag.Title = "Help Logging in";
    ViewBag.Tagline = "Enter the email address associated with your E-PASS accout to proceed.";
    ViewBag.Action = "ForgotUsernameEmail";
    ViewBag.Controller = "Account";
}

@using (Html.BeginForm("ForgotUsernameAndPassword", "Account", FormMethod.Post, new { @name = "forgotUsernameAndPasswordForm", @id = "forgotUsernameAndPasswordForm", @class = "form-horizontal", @role = "form" }))
{
    @Html.Hidden("OptionFlag", (int)Model.OptionFlag)
    @Html.HiddenFor(m => m.CheckEmailSuccess)
    @Html.HiddenFor(m => m.HasMultipleAccounts)

    <div id="emailBox" style="margin-top:30px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div id="emailFormData" class="panel panel-info">
            <div class="panel-heading">
                @if (Model.OptionFlag == EmailRequest.Option.ResetUsername)
                {
                    <div class="panel-title">Request Username</div>
                }
                else
                {
                    <div class="panel-title">Request Password</div>
                }
            </div>

            <div class="clearfix"></div>
            <div id="userLogin">
                <div class="panel-body">

                    @{string messages = string.Empty;
                        int tabIndex = 5000;
                    }

                    @if (!ViewData.ModelState.IsValid && (!Model.CheckEmailSuccess))
                    {
                        messages = string.Join("<br />", ViewData.ModelState.Values
                            .SelectMany(x => x.Errors)
                            .Select(x => x.ErrorMessage));
                        <div id="login-alert" class="alert alert-danger col-sm-12 login-alert">
                            <i class="fa fa-exclamation-triangle" aria-hidden="true"></i> @Html.Raw(HttpUtility.HtmlDecode(@messages))
                        </div>
                    }

                    @if (!Model.CheckEmailSuccess && ViewBag.AlertMessage != null)
                    {
                        <div class="forgot-username-message">
                            <div class="alert alert-warning">
                                <i class="fa fa-exclamation-triangle" aria-hidden="true"></i> @Html.Raw(ViewBag.AlertMessage)
                            </div>
                        </div>
                    }

                    <div class="col-sm-12">
                        <label for="Email" class="col-md-8 nopadding">Email Address</label>

                        <div class="input-group col-md-12 nopadding">
                            @Html.TextBoxFor(m => m.Email, htmlAttributes: new { @class = "form-control", @tabindex = tabIndex, @maxlength = "32", placeholder = "Enter email address", @data_msg_regex = "Please enter a valid Email Address", @autofocus = "" })
                            <a id="utcAccountHelp" class="input-group-btn btn-default help" style="padding-left:10px;" rel="popover" data-toggle="popover" data-content="">
                                <i class="material-icons">help</i>
                            </a>
                        </div>

                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <button id="resetUserNameAndPasswordButton" type="submit" name="resetUserNameAndPasswordButton" class="btn btn-primary bootStrapButton" tabindex="@(tabIndex + 1)"><span class="fa" aria-hidden="true"></span>@(Model.OptionFlag == EmailRequest.Option.ResetUsername ? "Request Username" : "Reset Password")</button>
            </div>

        </div>
    </div>
        <div id="UsernamePasswordModal" class="modal fade" role="dialog" aria-labelledby="confirmationTitle" data-backdrop="static">
            <div class="modal-dialog">
                <div class="modal-content ">
                    <div class="modal-header warning default">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="confirmTitle">Send Email<span id="confirmId"></span></h4>

                    </div>
                    <div class="modal-body">

                        @if (ViewBag.AlertMessage != null)
                        {
                            <div class="forgot-username-message">
                                <div class="alert alert-warning">
                                    <i class="fa fa-exclamation-triangle" aria-hidden="true"></i> @Html.Raw(ViewBag.AlertMessage)
                                </div>
                            </div>
                        }

                        @if (!ViewData.ModelState.IsValid)
                        {
                            messages = string.Join("<br />", ViewData.ModelState.Values
                                .SelectMany(x => x.Errors)
                                .Select(x => x.ErrorMessage));
                            <div class="forgot-username-message">
                                <div id="login-alert" class="alert alert-danger col-sm-12 login-alert">
                                    <i class="fa fa-exclamation-triangle" aria-hidden="true"></i> @Html.Raw(HttpUtility.HtmlDecode(@messages))
                                </div>
                            </div>
                        }
                        @if (Model.HasMultipleAccounts)
                        {
                            <div class="account-number-confirmation">

                                <label class="">Account Number:</label>
                                @Html.TextBoxFor(m => m.AccountNumber, htmlAttributes: new { value="",@class = "form-control", @maxlength = "32", placeholder = "Enter Account Number", @data_msg_regex = "Please enter a valid Account Nnumber", @autofocus = "" })

                            </div>
                        }
                        else //Below will keep returned account number in a hidden field to post it again.
                        {
                            @Html.HiddenFor(m => m.AccountNumber)
                        }



                    </div>


                    <div class="modal-footer default" style="clear:both;">
                            <button type="button" id="ConfirmButton" name="ConfirmButton" class="btn btn-primary bootStrapButton" ><span class="fa" aria-hidden="true"></span>Send Email</button>
                            <button type="button" id="noDeactivateConfirmButton" class="btn btn-info bootStrapButton2" data-dismiss="modal">Cancel</button>
                    </div>

                </div>
            </div>
        </div>

                        }

@section Scripts {

    <script>
        $(document).ready(function () {

            if ('@Model.CheckEmailSuccess' == 'True') {
                $("#UsernamePasswordModal").modal();
                $("#AccountNumber").text('');
            }

            $("#resetUserNameAndPasswordButton").click(function () {
                //debugger;
                // Display Spinner
                $('#resetUserNameAndPasswordButton span').addClass('fa-spinner fa-spin animated');
                $('#resetUserNameAndPasswordButton').addClass('disabled', 'disabled');
                $("#forgotUsernameAndPasswordForm").submit();

            });

            $("#ConfirmButton").click(function () {
                // Display Spinner
                $('#ConfirmButton span').addClass('fa-spinner fa-spin animated');
                $('#ConfirmButton').addClass('disabled', 'disabled');
                $("#forgotUsernameAndPasswordForm").submit();
            });
            var popoverBaseTemplate = '<div class="popover"><div class="arrow"></div><h3 class="popover-title {Style}"></h3><div class="popover-content"></div></div>';
            // Configure Styled Popover Templates
            var popoverInfoTemplate = popoverBaseTemplate.replace('{Style}', 'info');
            var utcAccountHelp = "<p style='min-width:200px'>This is the e-mail that is on your account.</p>";
            $('#utcAccountHelp').popover({
                placement: 'top',
                template: popoverInfoTemplate,
                title: 'Email Information',
                content: utcAccountHelp,
                html: true
            });


            $('#UsernamePasswordModal').on('hidden.bs.modal', function () {
                $("#CheckEmailSuccess").val('False');
            })
        });

    </script>
}