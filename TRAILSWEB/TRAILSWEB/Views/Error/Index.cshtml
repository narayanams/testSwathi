@{
    ViewBag.Title = "Unexpected Error Occurred";
}

@section Styles
{
    <style>
        /*#main {
            min-height: 560px;
        }*/

        div.alert-danger h3 {
            color: #a94442;
        }
    </style>
}

<div class="container">
    <div class="alert alert-danger" role="alert">
        @if (ViewBag.ErrorCode == "aft")
        {
            <h3>There was an error with your login.</h3>
            <p>Please close your web browser and then try again.</p>
            <p>We apologize for any inconvenience.</p>
        }
        else if (ViewBag.ErrorCode == "sess")
        {
            <h3>Session Timeout</h3>
            <p>Your session has ended due to inactivity.</p>
            <p>Please login again to continue your work.</p>
        }
        else if (ViewBag.ErrorCode == "404")
        {
            <h3>The Page you are looking for could not be found.</h3>
            <p>We apologize for any inconvenience.</p>
            <p>&nbsp;</p>
            <p><a href="javascript:history.back()"><i class="fa fa-arrow-left" aria-hidden="true"></i>&nbsp;Back to previous page</a></p>
        }
        else
        {
            <h3>An error occured processing your request.</h3>
            <p>The error has been logged and customer service has been notified.</p>
            <p>Please close your web browser and then try again.</p>
            <p>We apologize for any inconvenience.</p>
            <p>&nbsp;</p>
            <p><a href="javascript:history.back()"><i class="fa fa-arrow-left" aria-hidden="true"></i>&nbsp;Back to previous page</a></p>
        }
    </div>
</div>
