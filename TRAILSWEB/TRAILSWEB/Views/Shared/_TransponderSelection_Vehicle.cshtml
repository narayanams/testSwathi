<div class="clearfix visible-xs"></div>
<label class="control-label col-md-2 col-sm-3 col-xs-5" for="VehicleData_TransponderNumber" id="existingTransponderLabel">Plate State:</label>
<div class="control-div col-md-2 col-sm-3 col-xs-7">
    @Html.TextBox(licensePlateId, "Florida", new { @class = "form-control", @type = "number", @maxLength = 13, @placeholder = "Enter License State" })
</div>