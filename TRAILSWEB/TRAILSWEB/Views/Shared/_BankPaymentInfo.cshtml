@* Reusable Bank Payment Info Form *@

@using TRAILSWEB.Helpers
@model  TRAILSWEB.Models.PaymentInformation

<div class="form-group ">
    <div class="col-sm-6 col-xs-12 col1-control">
        <label for="accountHolderFirstName" class="col-sm-12">First Name:</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.AccountHolderFirstName, new { @class = "form-control textArea", @maxlength = "50", @required = "required", @placeholder = "Bank Account Holder First Name" })
        </div>
    </div>
    <div class="col-sm-6 col-xs-12">
        <label for="accountHolderLastName" class="col-sm-12">Last Name:</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.AccountHolderLastName, new { @class = "form-control textArea", @maxlength = "50", @required = "required", @placeholder = "Bank Account Holder Last Name" })
        </div>
    </div>
</div>
<div class="form-group">
    <div class="col-sm-6 col-xs-12 col1-control">
        <label for="accountNumber" class="col-sm-12 ">Account Number:</label>
        <div class="col-sm-10">
            <div class="input-group col-sm-12">
               
                @Html.TextBoxFor(m => m.BankAccountNumber, new { @class = "form-control textArea", @maxlength = "20", @type = "number", @required = "required", @placeholder = "Bank Account Number" })
                <a id="bankAccountHelp" class="input-group-addon info help bankAccountHelp" rel="popover" data-toggle="popover" data-content="" style="border:none;background:none;color:#337ab7;">
                    <i class="material-icons">help</i>

                </a>
             </div>
        </div>
    </div>
    <div class="col-sm-6 col-xs-12">
        <label for="routingNumber" class="col-sm-12 ">Routing Number:</label>
        <div class="col-sm-10">
            <div class="input-group col-sm-12">
              
                @Html.TextBoxFor(m => m.RoutingNumber, new { @class = "form-control textArea", @maxlength = "20", @type = "number", @required = "required", @placeholder = "Bank Routing Number" })
                <a id="bankRoutingHelp" class="input-group-addon info help bankRoutingHelp" rel="popover" data-toggle="popover" data-content="" style="border:none;background:none;color:#337ab7;">
                    <i class="material-icons">help</i>
                </a>
            </div>
        </div>
    </div>

</div>
