@* Reusable Auto-Reload Form *@
<div class="form-group required">
    <label for="autoReploadOption" class="col-sm-2">Auto Reload:</label>
    <div class="col-sm-10">
        <div class="checkbox">
            <label>
                <input type="checkbox" id="autoReploadOption" name="autoReploadOption" value="">
                Yes
            </label>
        </div>
    </div>
</div>
<div class="form-group required">
    <label for="reloadAmount" class="col-sm-2">Reload Amount:</label>
    <div class="col-sm-6">
        <div class="input-group">
            <span class="input-group-addon success">$</span>
            <input type="number" name="reloadAmount" id="reloadAmount" class="form-control" value="40" min="40" max="10000" step="1" required="required" aria-label="Amount (to nearest dollar)" placeholder="Amount (to nearest dollar)">
            <span class="input-group-addon success">.00</span>
        </div>
    </div>
    <div class="col-sm-4">
        <a id="reloadAmountHelp" class="help info" rel="popover" data-toggle="popover" data-content="">
            <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span> Minimum amount $40
        </a>
    </div>
</div>
<div class="form-group required">
    <label for="lowBalanceAmount" class="col-sm-2">Low Balance:</label>
    <div class="col-sm-6">
        <div class="input-group">
            <span class="input-group-addon success">$</span>
            <input type="number" name="lowBalanceAmount" id="lowBalanceAmount" class="form-control" value="10" min="10" max="10000" step="1" required="required" aria-label="Amount (to nearest dollar)" placeholder="Amount (to nearest dollar)">
            <span class="input-group-addon success">.00</span>
        </div>
    </div>
    <div class="col-sm-4">
        <a id="lowBalanceHelp" class="help info" rel="popover" data-toggle="popover" data-content="">
            <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span> Minimum amount $10
        </a>
    </div>
</div>
