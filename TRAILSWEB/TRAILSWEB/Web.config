  <system.web>
    <compilation debug="true" targetFramework="4.6.2" />
    <httpRuntime targetFramework="4.6.2" enableVersionHeader="false"/>
    <httpCookies httpOnlyCookies="true" /> <!-- Add the attribute  requireSSL="true" to Production version -->
    <authentication mode="None" />
    <sessionState timeout="15" />
    <machineKey validationKey="34407C2BC88B63083B6F036149DB0EAB1E4A1EC71C4ABA2C1CE99E93E14CE3D198732D460DCF3F7F05E7C92B9F660DC28EED751A3A3A299BE38D312CBEE90C59" decryptionKey="F903B27E7632667C57AD957716639444446E1026D1C76A0E8CDD65C338FE1E10" validation="SHA1" decryption="AES" />

